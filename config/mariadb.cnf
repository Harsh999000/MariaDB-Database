[client]
port   = 3306
socket = /db1/myserver/mariadb/run/mysql.sock

[mysqld]

# =========================
# FILE PATHS
# =========================
basedir  = /db1/myserver/mariadb/mariadb_files
datadir  = /db1/myserver/mariadb/data
socket   = /db1/myserver/mariadb/run/mysql.sock
pid-file = /db1/myserver/mariadb/run/mysqld.pid
tmpdir   = /db1/myserver/mariadb/tmp

# =========================
# NETWORKING
# =========================
bind-address = 0.0.0.0
port         = 3306

# =========================
# LOGGING
# =========================
log_output       = FILE
log_error        = /db1/myserver/mariadb/logs/error.log
general_log      = ON
general_log_file = /db1/myserver/mariadb/logs/general.log
slow_query_log      = ON
slow_query_log_file = /db1/myserver/mariadb/logs/slow.log

# Disable binary logging unless needed
skip-log-bin

# =========================
# USER
# =========================
user = root

# =========================
# Limit To Save Memory
# ==========================
innodb_buffer_pool_size = 64M
key_buffer_size = 16M
max_connections = 30
